<Project>
    <PropertyGroup>
        <!-- Override the bin and obj directories for every project in the solution -->
        <BaseOutputPath>$(ProjectDir)..\bin\CommandLine</BaseOutputPath>
        <BaseIntermediateOutputPath>$(ProjectDir)..\obj\CommandLine</BaseIntermediateOutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

        <!-- Override the publish directory -->
        <PublishDir>$(ProjectDir)..\run\CommandLine</PublishDir>
    </PropertyGroup>
</Project>