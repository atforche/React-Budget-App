<Project>
    <PropertyGroup>
        <!-- Override the bin and obj directories for building the solution -->
        <OutputPath>..\Build\bin\$(MSBuildProjectName)</OutputPath>
        <IntermediateOutputPath>..\Build\obj\$(MSBuildProjectName)</IntermediateOutputPath>
        <BaseIntermediateOutputPath>..\Build\obj\$(MSBuildProjectName)</BaseIntermediateOutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

        <!-- Override the publish directory for publishing the solution -->
        <PublishDir>..\Build\publish\$(MSBuildProjectName)</PublishDir>
    </PropertyGroup>

    <!-- Item groups containing all the build and publish files -->
    <ItemGroup>
        <BuildBinFiles Include="$(OutputPath)\**\*.*" />
        <BuildObjFiles Include="$(BaseIntermediateOutputPath)\**\*.*" />
        <PublishFiles Include="$(PublishDir)\**\*.*" />
  </ItemGroup>
</Project>